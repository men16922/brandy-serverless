# AI Branding Chatbot 환경변수 설정 예시
# 환경별 파일을 복사하여 사용하세요:
# cp .env.local .env  (로컬 개발)
# cp .env.dev .env    (개발 서버)

# 환경 설정
ENVIRONMENT=local
LOG_LEVEL=INFO

# OpenAI API 설정
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_SECRET_NAME=openai-api-key

# AWS 설정
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# DynamoDB 설정
DYNAMODB_ENDPOINT=http://localhost:8000  # 로컬만
DYNAMODB_TABLE=ai-branding-chatbot-sessions-local
SESSIONS_TABLE=ai-branding-chatbot-sessions-local

# S3/MinIO 설정
S3_ENDPOINT=http://localhost:9000  # 로컬만
S3_BUCKET=ai-branding-chatbot-assets-local
S3_ACCESS_KEY_ID=minioadmin  # 로컬 MinIO
S3_SECRET_ACCESS_KEY=minioadmin  # 로컬 MinIO

# ChromaDB 설정
CHROMA_ENDPOINT=http://localhost:8001  # 로컬만

# 폴백 이미지 설정
FALLBACK_IMAGES_BASE_URL=https://via.placeholder.com/1024x1024/4A90E2/FFFFFF?text=